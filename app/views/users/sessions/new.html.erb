<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="sign-in-page shadow">  
        <div class="card card-auth">
          <div class="card-header card-header-auth-form">
            <h3 class="card-title text-center">Sign In</h3>
          </div>
          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter email" %>
              </div>

              <div class="form-group">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter password" %>
              </div>

              <% if devise_mapping.rememberable? -%>
                <div class="form-group">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>

              <div class="actions">
                <%= f.submit "Log in", class: "btn btn-block btn-auth" %>
              </div>
            <% end %>

            <%= link_to "Sign up", new_registration_path(resource_name),  class: "text-dark"  %><br>
            <%= link_to "Forgot your password?", new_password_path(resource_name),  class: "text-dark"%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
