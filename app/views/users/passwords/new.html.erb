<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="mt-5 mb-5">  
        <div class="card card-auth">
          <div class="card-header card-header-auth-form">
            <h3 class="card-title text-center">Forgot your password?</h3>
          </div>
          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= devise_error_messages! %>
              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter email" %>
              </div>
              <div class="actions">
                <%= f.submit "Log in", class: "btn btn-block btn-auth" %>
              </div>
            <% end %>
            <span>
              <%= link_to "Log in", new_session_path(resource_name), class: "text-dark" %> |
              <%= link_to "Sign up", new_registration_path(resource_name), class: "text-dark"  %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

