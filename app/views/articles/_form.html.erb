    <ul>
    <% article.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: article, local: true) do |form| %>
  <%= form.hidden_field :user_id, value: current_user.id %>
  <div class="form-group">
    <%= form.label :title %><br />
    <%= form.text_field :title, id: :article_title,  class: "form-control", placeholder: "Enter Title" %>
  </div>
  <div class="form-group">
    <%= form.label :Content %><br />
    <%= form.text_area :content, id: :article_content  , class: "form-control", placeholder: "Content", 'data-provider': :summernote %>
  </div>
  <div class="form-group">
    <%= form.label :Cover_image %><br />
    <%= form.file_field :cover_image, id: :article_content %>
  </div>
  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-block btn-auth shadow" %>
  </div>
<% end %>

