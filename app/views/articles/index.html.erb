<div class="container mt-5 mb-5">
 <div class="row">  
    <% @articles.each do |article| %>
      <div class="col-md-4">
        <div class="card mt-1 mb-1 card-pro-d">
          <% if article.cover_image_url.present? %>
           <%= image_tag article.cover_image_url, class: "card-img-top" %>
          <%else%>
            <%= image_tag "dummy.jpg", class: "img-responsive", style: "width:350px;height:200px;" %>
          <% end %>   
          <div class="card-body">
            <h5 class="card-title"><%= @user.name %></h5>
            <div class="address-pro">
              <p class="card-text"> <%= article.title %> </p>
            </div>
            <%= link_to "Edit",edit_article_path(article)%>|
            <%= link_to "Show",article_path(article)%>|
            <%= link_to "Destroy",article_path(article), method: :delete,  data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>  