<div class="back-link ml-5 mt-4">
  <span>
   <button class="btn back-link-btn"><i class="fa fa-arrow-left"></i> <%=link_to "Back", videos_path, class: "text-white"%></button>
    <button class="btn back-link-btn"><i class="fa fa-eye"></i> <%=link_to "Show", @video, class: "text-white"%></button>
  </span>  
</div>
