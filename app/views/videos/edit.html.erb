          <div class="card-header card-header-auth-form">
            <h3 class="card-title text-center">Edit Video</h3>
          </div> 
          <div class="card-body">
           <%= render 'form', video: @video %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>              



